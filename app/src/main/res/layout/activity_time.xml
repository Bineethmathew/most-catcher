<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.abelkin.mostcatcher.activities.TimeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="60dp" >

            <TextView android:id="@+id/activity_time_from_text"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:text="Начало интервала (ч)"/>
            <EditText
                android:id="@+id/activity_time_from"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            >

            <TextView android:id="@+id/activity_time_to_text"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:text="Конец интервала (ч)"/>
            <EditText
                android:id="@+id/activity_time_to"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:text="Сохранить"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="savePreferences"/>

    </LinearLayout>

</RelativeLayout>
